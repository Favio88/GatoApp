<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GatoActivity">

    <LinearLayout
        android:id="@+id/inicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/btnJugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo Juego"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_botones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/btn1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text=" "
            android:textSize="70sp"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/btn1"
            android:text=" "
            android:textSize="70sp"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/btn2"
            android:text=" "
            android:textSize="70sp"/>

        <Button
            android:id="@+id/btn4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/btn1"
            android:text=" "
            android:textSize="70sp"/>

        <Button
            android:id="@+id/btn5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/btn4"
            android:layout_below="@+id/btn2"
            android:text=" "
            android:textSize="70sp"/>

        <Button
            android:id="@+id/btn6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/btn5"
            android:layout_below="@+id/btn3"
            android:text=" "
            android:textSize="70sp"/>

        <Button
            android:id="@+id/btn7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/btn4"
            android:text=" "
            android:textSize="70sp"/>

        <Button
            android:id="@+id/btn8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/btn7"
            android:layout_below="@id/btn5"
            android:text=" "
            android:textSize="70sp"/>

        <Button
            android:id="@+id/btn9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/btn2"
            android:layout_below="@+id/btn6"
            android:text=" "
            android:textSize="70sp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ganador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_botones"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtv_victoriasJ1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:text="0"
            android:textColor="@color/colorRed"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/txtv_ganador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Ganador: ????" />

        <TextView
            android:id="@+id/txtv_victoriasJ2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="0"
            android:textColor="@color/colorBlue"
            android:textSize="40sp" />

    </LinearLayout>

</RelativeLayout>